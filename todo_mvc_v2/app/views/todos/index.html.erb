<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TodoMVC</title>
    <link rel="stylesheet" href="/index.css">
  </head>
  <body>
    <section id="todoapp">
      <header id="header">
        <h1>todos</h1>
        <form action="/todos/create_todo" method="POST">
          <input id="new-todo" type="text" placeholder="What needs to be done?" name="todo[title]" autofocus>
        </form>
      </header>
      <!-- This section should be hidden by default and shown when there are todos to display -->
      <section id="main">
        <form action="/todos/toggle_all_complete" method="POST">
          <input id="toggle-all" type="checkbox" <%= "checked" if !Todo.more_to_do? %>>
          <label for="toggle-all">Mark all as complete</label>
        </form>
        <ul id="todo-list">
          <!-- These are here just to show the structure of the list items -->
          <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
          <% @todos.each do |todo| %>
            <!-- If this list item is being edited, the div.view can be omitted -->
            <% if @editing_id != todo.id %>
              <li <%= 'class="completed"' if todo.is_complete %>>
                <div class="view">
                  <form action="/todo/<%= todo.id %>/toggle_complete" method="POST">
                      <input class="toggle" type="checkbox"  <%= "checked" if todo.is_complete %> > 
                  </form>
                  <a href="/todo/<%= todo.id %>/edit"><%= todo.title %></a>
                  <form action="/todo/<%= todo.id %>/destroy" method="POST">
                    <button class="destroy"></button>
                  </form>
                </div>
              </li>
            <!-- The following form should appear only if this list item is being edited -->
            <% else %>
              <li class="editing">
                <form action="/todo/<%= todo.id %>/update" method="POST">
                  <input class="edit" type="text" value="<%= todo.title %>" name="todo[title]">
                </form>
              </li>
            <% end %>
          <% end %>
        </ul>
      </section>
      <!-- This footer should hidden by default and shown when there are todos -->
      <% if Todo.all.size > 0 %>
        <footer id="footer">
          <!-- This should be `0 items left` by default -->
          <% if Todo.num_left_to_do == 1 %>
            <span id="todo-count"><%= Todo.num_left_to_do %> item left</span>
          <% else %>
            <span id="todo-count"><%= Todo.num_left_to_do %> items left</span>
          <% end %>
          <ul id="filters">
            <li>
              <a <%= 'class="selected' if @flag == 'all' %> href="/todos/index">All</a>
            </li>
            <li>
              <a <%= 'class="selected' if @flag == 'active' %> href="/todos/active">Active</a>
            </li>
            <li>
              <a <%= 'class="selected' if @flag == 'completed' %> href="/todos/completed">Completed</a>
            </li>
          </ul>
          <!-- Hidden if no completed items are left ↓ -->
          <% if Todo.anything_completed? %>
            <form action="/todos/destroy_all_complete" method="POST">
              <button id="clear-completed">Clear completed</button>
            </form>
          <% end %>    
        </footer>
      <% end %>
    </section>
    <footer id="info">
      <p>Click to edit a todo</p>
      <!-- Change this out with your name and url ↓ -->
      <p>Created by <a href="http://github.com/starspace1">Leslie Brown</a></p>
      <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
    </footer>
    <!-- Scripts here. Don't remove ↓ -->
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="/app.js"></script>
  </body>
</html>
