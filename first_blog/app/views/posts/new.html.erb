<h1>Add a Post</h1>

<%= form_for @post do |p| %>
  <%= p.label :title %>
  <%= p.text_field :title %>
  <%= p.label :author %>
  <%= p.text_field :author %>
  <br><br>
  <%= p.label :text %>
  <br>
  <%= p.text_area :text, cols: 50, rows: 10 %>
  <br>
  <%= p.submit %>
<% end %>

<br><a href = "/posts">Back Home</a>