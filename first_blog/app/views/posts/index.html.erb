<h1>Blog Posts</h1>

<% @posts.each do |post| %>
  <p><strong><%= link_to post.title, post_path(post) %></strong></p>
  <p><%= post.preview %><%= link_to '...', post_path(post) if post.preview.length == 100 %></p>
<% end %>

<br><%= link_to 'Add a new post', new_post_path %><br>

<br><%= will_paginate @posts %>